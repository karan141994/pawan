<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pawan.summer.profile">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:src="@drawable/home" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:orientation="vertical"
        android:id="@+id/bottom"
        >

        <TextView
            android:id="@+id/toptext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Karan"
            android:text="What we do\n\n
It is kind of an tourist guide application which lets you know where to visit in a new place."
            android:textAllCaps="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"

            android:textEditNoPasteWindowLayout="@style/Base.TextAppearance.AppCompat.Large"

            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:background="@color/back"
            android:layoutDirection="inherit"
            android:text="The data that you see on this app are uploaded by the users of this app who are locals to their place"
            android:textAllCaps="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textEditNoPasteWindowLayout="@style/Base.TextAppearance.AppCompat.Large" />


    </LinearLayout>


</RelativeLayout>
